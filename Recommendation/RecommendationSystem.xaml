            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="Black">
                <TextBlock x:Name="recommendationsysten_text" Grid.Row="0" Text="Recommendation System" TextWrapping="Wrap" FontSize="75" TextAlignment="Center" FontWeight="Bold" Margin="277,65,276,65"/>
            </Grid>

            <Grid Grid.Row="1" Background="#D55E5E" Height="830" VerticalAlignment="Top">
                
            </Grid>
        </Grid>
    </Grid>
</Page>
